check process {{app_name}} MATCHING "{{app_name}}/releases"
       start program = "/bin/su - {{ deployer }} -c 'PORT={{ app_port }} {{ app_deploy_path }}/bin/{{app_name}} start'"
       stop program = "/bin/su - {{ deployer }} -c 'PORT={{ app_port }} {{ app_deploy_path }}/bin/{{app_name}} stop'"
       {% for alert_email in app_alert_emails %}
       alert {{ alert_email }}
       {% endfor %}
